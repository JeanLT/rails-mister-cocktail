<h2>This is <%= @cocktail.name %></h2>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item d-flex justify-content-between">
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-danger' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-4' do %>
  <i class="fa fa-plus"></i>
  Add a dose
<% end %>
